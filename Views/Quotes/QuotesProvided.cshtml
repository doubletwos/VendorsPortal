@model VendorsPortal.ViewModels.QuotesProvidedViewModel
@{
	ViewBag.Title = "QuotesProvided";
}

	<body>

		<table class="table table-striped table-hover table-condensed table-bordered">
			<tr class="info">

				<th>Customer Name </th>

				<th>Event Date</th>
				<th>Email Address</th>
				<th>Status</th>
				<th>Quoted Price</th>
				<th>Next Action</th>

			</tr>


			@foreach (var quoted in Model.Quotes)
			{
		<tr class="active">
		
			<td><strong>@quoted.ContactFullName</strong></td>
		
			<td><strong>@quoted.EventDate</strong></td>
			<td><strong>@quoted.Email</strong></td>
			<td>
				@if (quoted.QuotesProvided != null)
				{
				<p><strong>Quote Provided</strong></p>
					

				}
				else
				{
			<p><strong>Awaiting Quotation</strong></p>
				}
				
			</td>
			<td>
				@if (quoted.QuotesProvided != null)
				{
				<p> <strong>&#x20a6; @quoted.QuotesProvided.Price</strong></p>


				}
				else
				{
					<p><strong>&#x20a6; 0.00</strong></p>
				}
				
			</td>
			<td>
				@if (quoted.QuotesProvided != null)
				{
					@Html.ActionLink("Convert to booking", "Create", "Bookings", new { id = quoted.QuoteId }, null)
				}
				else
				{
					@Html.ActionLink("Respond", "Create", "QuotesProvided", new { id = quoted.QuoteId }, null)
				}
			</td>
			@*<td>
			@Html.ActionLink("Edit", "Edit", new { id = quoted.QuoteId }) |
			@Html.ActionLink("Details", "Details", new { id = quoted.QuoteId }) |
			@Html.ActionLink("Delete", "Delete", new { id = quoted.QuoteId })|
			@Html.ActionLink("Respond", "Create", "QuotesProvided", new { id = quoted.QuoteId }, null)
		</td>*@
		</tr>
			}
		</table>
	</body>