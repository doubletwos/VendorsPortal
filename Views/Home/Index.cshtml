@model IEnumerable<VendorsPortal.Models.Vendor>
@{
	ViewBag.Title = "Home Page";
}
<br />
<br />
@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
	<div class="row">
		<div class="col-md-4">
			@Html.DropDownList("VendorTypeId", null, string.Empty, htmlAttributes: new { @class = "form-control" })
			
		</div>
		<div class="col-md-4">
			<input type="text" name="searcharea" class="form-control" placeholder="" id="searchtrade"/>
		</div>
		<div class="col-md-4">
			<button type="button" class="btn btn-default">Search</button>
		</div>
	</div>
}
<br />
<br />
<table class="table">
	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.VendorType.VendorTypeName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.VendorName)
			</td>
			<td>
				<img src="~/File?id=@item.Files.First(f => f.FileType == VendorsPortal.Models.FileType.Avatar).FileId" alt="avatar" width="100" />
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.VendorId }) |
				@Html.ActionLink("Details", "Details", new { id = item.VendorId }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.VendorId })
			</td>
		</tr>
	}
</table>



